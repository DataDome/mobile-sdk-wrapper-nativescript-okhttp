<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="DataDome" icon="" />

    <StackLayout class="p-20">
        <Label text="Send HTTP request" class="h2 text-center" />
        <Button text="Send request" tap="{{ sendRequest }}" class="-primary" />
        <Button text="Clear cookie" tap="{{ clearCookie }}" class="-primary" />
        <Label text="{{ message }}" class="h2 text-center" textWrap="true" />
    </StackLayout>
</Page>
